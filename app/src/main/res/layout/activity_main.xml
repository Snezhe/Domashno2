<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0392B"
        android:padding="4dp"
        android:text="@string/title"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginStart="51dp"
            android:layout_marginBottom="9dp"
            android:background="#00BCD4"
            android:text="@string/enterButton"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/openPage"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginStart="265dp"
            android:background="#00BCD4"
            android:onClick="web"
            android:text="@string/openPage"
            android:textColor="#ffff" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="26dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginStart="145dp"
            android:layout_marginBottom="0.8dp"
            android:background="@drawable/mk"
            android:onClick="macedonianLanguage" />

        <ImageButton
            android:layout_width="28dp"
            android:layout_height="25dp"
            android:layout_gravity="center|center_vertical"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="0.8dp"
            android:background="@drawable/en"
            android:onClick="englishLanguage" />

        <ImageButton
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center|center_vertical"
            android:layout_marginStart="47dp"
            android:layout_marginTop="0.8dp"
            android:layout_marginBottom="0.8dp"
            android:background="@drawable/es"
            android:onClick="spanishLanguage" />

    </FrameLayout>

</LinearLayout>